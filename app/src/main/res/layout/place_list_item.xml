<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/placeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:text="Starbucks,gfyukdsgfygfysfygfykfdyugakfyugkfyukfdyugyugkyufgyfagfyuagfyuksagyudfsa"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/placeTxt"
        app:layout_constraintStart_toStartOf="@+id/placeTxt"
        app:layout_constraintTop_toTopOf="@+id/placeTxt"
        app:srcCompat="@drawable/place_search_icon" />

    <TextView
        android:id="@+id/addressTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textSize="13sp"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/placeTxt"
        app:layout_constraintTop_toBottomOf="@+id/placeTxt" />
</android.support.constraint.ConstraintLayout>